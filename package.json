{
  "version": "1.0.0",
  "description": "Full-stack flashcard application for studying with progress tracking",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run dev",
    "build": "cd client && bun run build",
    "start:client": "cd client && bun run start",
    "start:server": "cd server && bun run start",
    "typecheck": "cd client && bun run typecheck",
    "db:generate": "cd server && bun run db:generate",
    "db:push": "cd server && bun run db:push",
    "db:migrate": "cd server && bun run db:migrate",
    "db:studio": "cd server && bun run db:studio",
    "db:seed": "cd server && bun run db:seed",
    "db:reset": "cd server && bun run db:reset",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/build server/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakan-kemal/flashcard-app.git"
  },
  "keywords": [
    "flashcards",
    "study",
    "learning",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hakan-kemal/flashcard-app/issues"
  },
  "homepage": "https://github.com/hakan-kemal/flashcard-app#readme"
}
